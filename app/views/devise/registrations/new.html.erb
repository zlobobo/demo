<div class="container">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),html: { :class => "form-signin"}) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign up</h2>
  <div><br/><%= f.email_field :email, :autofocus => true, :class => "input-block-level", placeholder: "Email address"%></div>

  <div><br/><%= f.text_field :name, :class => "input-block-level", placeholder: "Name"%></div>

  <div><br/><%= f.password_field :password, :class => "input-block-level", placeholder: "Password" %></div>

  <div><br/>  <%= f.password_field :password_confirmation, :class => "input-block-level", placeholder: "Confirm Password" %></div>

  <div><%= f.submit "Sign up", :class => "btn btn-large btn-primary" %></div>

<%= render "devise/shared/links" %>

<% end %>

</div>